<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/project_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:id="@+id/root_project_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder.card.project.name"
            style="@style/Base.TextAppearance.AppCompat.Large"
            />

        <TextView
            android:id="@+id/project_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder.card.project.summary"
            style="@style/Base.TextAppearance.AppCompat.Small"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/analyst_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="end"
            />

    </LinearLayout>



</android.support.v7.widget.CardView>
